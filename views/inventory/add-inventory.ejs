<main>
  <h1>Add Inventory Item</h1>

  <!-- Flash messages -->
  <% if (flash && flash.length > 0) { %>
  <div class="flash-message">
    <% flash.forEach(msg => { %>
    <p><%= msg %></p>
    <% }) %>
  </div>
  <% } %>

  <!-- Server-side validation errors -->
  <% if (errors && errors.length > 0) { %>
  <div class="error-messages">
    <% errors.forEach(err => { %>
    <p><%= err %></p>
    <% }) %>
  </div>
  <% } %>

  <form action="/inv/add-inventory" method="POST">
    <label for="classificationList">Classification</label>
    <%- classificationList %>
    <!-- dynamically built dropdown -->

    <label for="inv_make">Make</label>
    <input
      type="text"
      name="inv_make"
      id="inv_make"
      value="<%= formData.inv_make || '' %>"
      required
    />

    <label for="inv_model">Model</label>
    <input
      type="text"
      name="inv_model"
      id="inv_model"
      value="<%= formData.inv_model || '' %>"
      required
    />

    <label for="inv_year">Year</label>
    <input
      type="number"
      name="inv_year"
      id="inv_year"
      value="<%= formData.inv_year || '' %>"
      required
    />

    <label for="inv_price">Price</label>
    <input
      type="number"
      name="inv_price"
      id="inv_price"
      value="<%= formData.inv_price || '' %>"
      required
    />

    <label for="inv_miles">Miles</label>
    <input
      type="number"
      name="inv_miles"
      id="inv_miles"
      value="<%= formData.inv_miles || '' %>"
      required
    />

    <label for="inv_color">Color</label>
    <input
      type="text"
      name="inv_color"
      id="inv_color"
      value="<%= formData.inv_color || '' %>"
      required
    />

    <label for="inv_image">Image Path</label>
    <input
      type="text"
      name="inv_image"
      id="inv_image"
      value="<%= formData.inv_image || '/images/no-image.png' %>"
    />

    <label for="inv_thumbnail">Thumbnail Path</label>
    <input
      type="text"
      name="inv_thumbnail"
      id="inv_thumbnail"
      value="<%= formData.inv_thumbnail || '/images/no-image-thumbnail.png' %>"
    />

    <button type="submit">Add Inventory</button>
  </form>
</main>
